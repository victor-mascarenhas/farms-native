{
  "name": "farms-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "cross-env": "^10.0.0",
    "turbo": "^2.5.5"
  },
  "scripts": {
    "dev:mobile": "pnpm --filter mobile-native start",
    "dev:web-host": "pnpm --filter web-host dev",
    "dev:web-remote": "pnpm --filter web-remote dev",
    "dev:web": "pnpm --filter web-remote dev && pnpm --filter web-host dev --parallel",
    "dev": "turbo run dev --parallel"
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0"
    }
  },
  "devDependencies": {
    "turbo": "^1.13.0"
  }
}
